@model Task_Two_MVC.Entities.Department

@{
    ViewData["Title"] = "Add New Department";
}

<h2>Add New Department</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label for="Name">Department Name</label>
        <input type="text" class="form-control" id="Name" name="Name" required>
    </div>

    <div class="form-group">
        <label for="MgrName">Manager Name</label>
        <input type="text" class="form-control" id="MgrName" name="MgrName" required>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Add</button>
    <a asp-action="ShowAll" class="btn btn-secondary">Cancel</a>
</form>
