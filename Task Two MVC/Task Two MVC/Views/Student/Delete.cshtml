@model Task_Two_MVC.Entities.Student

<h2 class="text-danger">Delete Student</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" value="@Model.Name" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Age</label>
        <input class="form-control" value="@Model.Age" disabled />
    </div>

    <div class="mb-3">
        <label class="form-label">Department</label>
        <input class="form-control" value="@Model.Department?.Name" disabled />
    </div>

    <div class="alert alert-danger">
        <strong>Are you sure you want to delete this student?</strong>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ShowAll" class="btn btn-secondary">Cancel</a>
</form>
